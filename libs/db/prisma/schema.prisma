// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostTypeEnum {
  // 翻译
  TRANSLATION
  // 转载
  TRANSSHIPMENT
  // 原创
  ORIGINAL
}

// 文章模型
model Post {
  // id
  id          String         @id @default(cuid())
  // 标题
  title       String         @unique
  // 描述
  description String?
  // 内容
  content     String
  // 阅读数
  view        Int            @default(0)
  // 类型【翻译、转载、原创】
  type        PostTypeEnum   @default(ORIGINAL)
  // 软删除 0未删除 1删除
  isDeleted   Int            @default(0) @db.SmallInt()
  // 是否发布 0未发布 1发布
  isPublished Int            @default(0) @db.SmallInt()
  // 创建时间
  createdAt   DateTime       @default(now())
  // 更新时间
  updatedAt   DateTime       @updatedAt
  // 发布时间
  publishedAt DateTime       @updatedAt
  // 分类
  categories  PostCategory[]
  // 标签
  tags        PostTag[]
}

// 文章分类模型
model PostCategory {
  // id
  id          String   @id @default(cuid())
  // 分类名称
  name        String   @unique
  // 分类描述
  description String?
  // 分类是否软删除 0未删除 1删除
  isDeleted   Int      @default(0) @db.SmallInt()
  // 创建时间
  createdAt   DateTime @default(now())
  // 更新时间
  updatedAt   DateTime @updatedAt
  // 分类下的文章
  posts       Post[]
}

// 文章标签模型
model PostTag {
  // id
  id          String   @id @default(cuid())
  // 标签名称
  name        String   @unique
  // 标签描述
  description String?
  // 标签是否软删除 0未删除 1删除
  isDeleted   Int      @default(0) @db.SmallInt()
  // 创建时间
  createdAt   DateTime @default(now())
  // 更新时间
  updatedAt   DateTime @updatedAt
  // 标签下是文章
  posts       Post[]
}

// 用户模型
model User {
  // id
  id        String   @id @default(cuid())
  // 邮箱
  email     String   @unique
  // 头像地址
  avatar    String
  // 密码
  password  String
  // 是否软删除
  isDeleted Int      @default(0) @db.SmallInt()
  // 创建时间
  createdAt DateTime @default(now())
  // 更新时间
  updatedAt DateTime @updatedAt
}

// 博客关于 模型
model About {
  // id
  id        String   @id @default(cuid())
  // 关于的具体内容
  content   String
  // 创建时间
  createdAt DateTime @default(now())
  // 更新时间
  updatedAt DateTime @updatedAt
}

// 博客首页配置模型
model Profile {
  // id
  id        String   @id @default(cuid())
  // 作者
  author    String?
  // 头像链接
  avatar    String?
  // 座右铭
  slogan    String?
  // github
  github    String?
  // 邮箱
  email     String?
  // 微信号
  wechat    String?
  // 网站链接
  site      String?
  // 创建时间
  createdAt DateTime @default(now())
  // 更新时间
  updatedAt DateTime @updatedAt
}
